<shortcuts xmlns:android="http://schemas.android.com/apk/res/android">
    <shortcut
        android:shortcutId="scan"
        android:enabled="true"
        android:icon="@drawable/show_icon"
        android:shortcutShortLabel="@string/scan_shortcut_short_label"
        android:shortcutLongLabel="@string/scan_shortcut_long_label"
        android:shortcutDisabledMessage="@string/scan_disabled_message">

        <intent
            android:action="android.intent.action.VIEW"
            android:targetClass="com.example.scan.SplashScreen"
            android:targetPackage="com.example.scan" />

        <categories android:name="android.shortcut.conversation" />
    </shortcut>
    <!-- Specify more shortcuts here. -->
</shortcuts>
